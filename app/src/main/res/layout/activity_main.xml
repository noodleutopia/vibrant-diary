<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ss.pku.vibrantdiary.tags.MainActivity">

    <include
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        layout="@layout/view_titlebar_layout"
        />

    <include android:id="@+id/ll_bottombar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        layout="@layout/view_bottombar_layout"
        android:layout_alignParentBottom="true"
        />

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_titlebar"
        android:layout_above="@id/ll_bottombar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30.0dp"
            android:text="编辑区域"/>
    </FrameLayout>

</RelativeLayout>
